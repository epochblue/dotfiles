#!/usr/bin/env bash

# Install the git submodule so I have my vim plugins
git submodule update --init --recursive

# Start with the simple dotfiles
dotfiles=( .bashrc .bash_aliases .gemrc .vim .vimrc .inputrc .gitconfig .osx_defaults .todo.cfg )
for i in "${dotfiles[@]}"
do
    if [ ! -e ~/$i ]; then 
        echo "Creating ~/$i -> $(pwd)/$i"
        ln -s $(pwd)/$i $HOME/$i
    else
        echo "~/$i already exists; skipping."
    fi
done

# Create an env-specific file, just in case
if [ ! -f ~/.bashrc.local ]; then
  echo "Creating env-specific .bashrc file."
  echo "# Put environment-specific stuff here." > ~/.bashrc.local
fi

source ~/.bashrc
